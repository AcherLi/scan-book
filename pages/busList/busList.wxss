/* pages/busList/busList.wxss */
.main {
  padding: 0 0 0
}
.top {
  border-radius: 0 0 10rpx 10rpx;
  padding: 20rpx 36rpx;
  background: #4285f4;
}
input {
  font-size: 30rpx;
  padding: 0 20rpx;
  background: #fff;
  color: #333;
  border-radius: 10rpx;
  height: 60rpx;
  margin: 20rpx 0;
}
.con {
  padding: 20rpx;
  border-bottom: 1px solid #e5e5e7;
}
.con .line{
  color: #363636;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
  width: 100%;
  padding-left: 60rpx;
  box-sizing: border-box;
  background: url("https://lizonghao.top/static/img/d-bus.png") 0 50% no-repeat 
}
.con .text{
  margin: 18rpx 0;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #919095;
}
.ls {
  margin: 0 0 20rpx;
}
.bus-title {
  padding: 0 20rpx;
  font-size: 32rpx;
  line-height: 98rpx;
  display: flex;
  justify-content: space-between;
  background: #faf9fe;
  border-bottom: 1px solid #e5e5e7;
}
.bus-title .first {
  flex: 1 1 auto;
  white-space: nowrap;
  text-overflow: ellipsis;
overflow: hidden;
  padding-left: 90rpx;
  background: url("https://lizonghao.top/static/img/bus-color.png") 0 50% no-repeat
}
.bus-title text {
  font-size: 28rpx;
  color: #919095;
}
.bus-title .naviga{
  padding-right: 40rpx;
  flex: 0 0 128rpx;
  background: url("https://lizonghao.top/static/img/r-arrow.png") 100% 50% no-repeat;
}